{
  "name": "next2nothing",
  "version": "0.1.0",
  "description": "Another opinionated next.js typescript boilerplate",
  "private": true,
  "license": "BSD 3",
  "homepage": "",
  "author": "einSelbst",
  "keywords": [
    "next.js",
    "i18n",
    "typescript"
  ],
  "repository": "https://github.com/einSelbst/next2nothing",
  "bugs": "https://github.com/einSelbst/next2nothing/issues",
  "scripts": {
    "prepare": "is-ci || husky install",
    "preinstall": "is-ci || npx only-allow pnpm",
    " ----------------------- Development ----------------------- ": "",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean",
    "watch": "echo \"Error: no command specified\" && exit 1",
    " ------------------------- Testing ------------------------- ": "",
    "test": "echo \"Error: no test specified\" && exit 1",
    "cover": "echo \"Error: no test specified\" && exit 1",
    " ------------------------- Linting ------------------------- ": "",
    "?format": "echo Format source code and fix issues",
    "format": "prettier --check --write --ignore-unknown . --plugin=prettier-plugin-tailwindcss --plugin=prettier-plugin-sh --plugin=prettier-plugin-toml",
    " ------------------------- Helpers ------------------------- ": "",
    "?": "npm-scripts-info"
  },
  "dependencies": {
    "is-ci": "3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "git-format-staged": "3.0.0",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "npm-scripts-info": "0.3.9",
    "prettier": "2.8.1",
    "prettier-plugin-sh": "0.12.8",
    "prettier-plugin-tailwindcss": "0.1.13",
    "prettier-plugin-toml": "0.3.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@7.18.0",
  "engines": {
    "pnpm": ">=7"
  }
}
